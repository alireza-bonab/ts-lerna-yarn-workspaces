{
  "comilerOptions": {
    "sourceMap": true,
    "removeComments": true,

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "alwaysStrict": true,

    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "incremental": false,

    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
  },
  "exclude": ["**/node_modules", "**/.*/", "**/jest.config.js", "**/.build"]
}
